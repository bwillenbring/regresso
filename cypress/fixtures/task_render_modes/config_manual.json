{
    "field_owner_entity_type": "Task",
    "field_data_type": "image",
    "col_name": "image",
    "substitute_sort_field": null,
    "allow_recode": false,
    "image_summary_options": "none",
    "field_custom_metadata": null,
    "query": {
        "entity_type": "Version",
        "filters": {
            "logical_operator": "and",
            "conditions": [{
                "path": "sg_task",
                "relation": "is",
                "values": [{
                    "type": "Task",
                    "id": 0,
                    "name": "Current Task",
                    "valid": "parent_entity_token"
                }],
                "active": "true"
            }]
        }
    },
    "image_sorts": "[{\"column\":\"created_at\",\"direction\":\"desc\"}]",
    "render_method": "use_uploaded_image"
}
